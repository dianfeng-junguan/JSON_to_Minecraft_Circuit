{
    "configurations": [
        {
            "name": "(Windows) 启动",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/mc_circuit_script.exe",
            "args": [
                "-i",
                "lib/and.json",
                "-o",
                "and_sim.json",
                "-s",
                "sim.json",
                "-l",
                "lib"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "1"
                }
            ],
            "console": "externalTerminal"
        }
    ]
}